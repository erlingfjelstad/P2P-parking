<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar.Launcher" parent="NoActionBar">
        <item name="android:windowBackground">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/true_white</item>
        <item name="itemBackground">?attr/selectableItemBackground</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/true_black</item>
        <item name="paddingStart">@dimen/bottom_navigation_padding</item>
        <item name="paddingEnd">@dimen/bottom_navigation_padding</item>
    </style>

    <dimen name="bottom_navigation_padding">4dp</dimen>
</resources>
